<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:weightSum="1">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_gravity="center"
        android:src="@drawable/emergency_icon1"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="USE IN CASE OF EMERGENCY"
        android:id="@+id/emergencyText"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:textSize="21sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginTop="10dp"
        android:typeface="sans"
        android:gravity="center"/>
    <View
        android:layout_width="220dp"
        android:layout_height="2dp"
        android:background="#FCCF15"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"/>


    <LinearLayout
        android:layout_width="262dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp">

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/police"
            android:background="@drawable/call"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text=" Police Control Room"
            android:id="@+id/callPolice"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="220dp"
        android:layout_height="2dp"
        android:background="#FCCF15"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="262dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        >

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/emergencycall"
            android:background="@drawable/call"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text=" Emergency Contact 1"
            android:id="@+id/emergency"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="220dp"
        android:layout_height="2dp"
        android:background="#FCCF15"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="262dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        >

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/emergencycall2"
            android:background="@drawable/call"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text=" Emergency Contact 2"
            android:id="@+id/emergency2"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="220dp"
        android:layout_height="2dp"
        android:background="#FCCF15"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>


    <Button
        android:layout_width="130dp"
        android:layout_height="27dp"
        android:text="back"
        android:id="@+id/back"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/roundbutton"
        android:textColor="#008496"
        android:layout_marginTop="40dp"
        android:typeface="monospace"/>
</LinearLayout>
